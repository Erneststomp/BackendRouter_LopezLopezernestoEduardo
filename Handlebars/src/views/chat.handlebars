<div style="width: 100%;">
    <form action='/' method='POST' content-type='application/json'>
        <label>Name</label>
        <input type='text' name='title' id='title' required/><br>
        <label>Reward</label>
        <input type='number' name='price'id='price' required/><br>
        <label>Species</label>
        <input type='text' name='especie' id='especie' required/><br>
        <label>Image URL</label>
        <input type='text' name='thumbnail' id='thumbnail' required/><br>
        <button id="sendNewChar" type='submit'>Add Character</button>
    </form>
    <div style="display: inline-flex;">
        <div style="width: 90%;">
        <h1> Characters:</h1>
            <div style="display: block;  border: 1px solid red;  padding: 5px;  margin-top: 5px; width: 100%; height: 550px;overflow-y: scroll; border-style:double;">
                {{#each characters}}
                    <div>
                        <img src="{{this.thumbnail}}" style="height: 100px;"></img>
                        <h2>Name: {{this.title}} Species {{this.especie}} Reward: {{this.price}}0 Schmeckles</h2>
                    </div>
                {{/each}}
            </div>
        </div>
        <div style="width: 90%; margin">

            <div style="display: block;  border: 1px solid red;  padding: 5px;  margin-top: 5px; width: 100%; height: 550px;overflow-y: scroll; border-style:double; margin: 30px;">
                <div style="marginRight:'auto',marginLeft:'auto' ">
                    <h2>Forum Chat</h2>
                    <input id="mymessage"><br>
                    <span id="log_chat"></span>
                </div>
            </div>
        </div>
    </div>
    
</div>

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/socket.io/socket.io.js"></script>    
    <script src="chat.js"></script>